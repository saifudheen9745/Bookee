<main id="main" class="main">

    <div class="pagetitle">
      <h1>Dashboard</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item active">Dashboard</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
      <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-12">
          <div class="row">

            <!-- Sales Card -->
            <div class="col-xxl-4 col-md-6">
              <div class="card info-card sales-card">

                <div class="filter">
                  <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                  <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                    <li class="dropdown-header text-start">
                      <h6>Filter</h6>
                    </li>

                    <li><a style="cursor: pointer;" class="dropdown-item" onclick="todaysSales()">Today</a></li>
                    <li><a style="cursor: pointer;" class="dropdown-item" onclick="thisMonthsSales()">This Month</a></li>
                    <li><a style="cursor: pointer;" class="dropdown-item" onclick="thisYearsSales()">This Year</a></li>
                  </ul>
                </div>

                <div class="card-body">
                  <h5 class="card-title" id="sales-label">Sales <span>| Today</span></h5>

                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-cart"></i>
                    </div>
                    <div class="ps-3">
                      <h6 id="numberofsales"></h6>
                      

                    </div>
                  </div>
                </div>

              </div>
            </div><!-- End Sales Card -->

            <!-- Revenue Card -->
            <div class="col-xxl-4 col-md-6">
              <div class="card info-card revenue-card">

                <div class="filter">
                  <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                  <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                    <li class="dropdown-header text-start">
                      <h6>Filter</h6>
                    </li>

                    <li><a style="cursor: pointer;" class="dropdown-item" onclick="dailyrevenue()">Today</a></li>
                    <li><a style="cursor: pointer;" class="dropdown-item" onclick="monthlyrevenue()">This Month</a></li>
                    <li><a style="cursor: pointer;" class="dropdown-item" onclick="yearlyrevenue()">This Year</a></li>
                  </ul>
                </div>

                <div class="card-body">
                  <h5 class="card-title">Revenue <span>| <span id="label"></span></span></h5>

                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-currency-dollar"></i>
                    </div>
                    <div class="ps-3">
                      <h6 ><span>Rs: </span><span id="revenue"></span></h6>
                     
                    </div>
                  </div>
                </div>

              </div>
            </div><!-- End Revenue Card -->

            <!-- Customers Card -->
            <div class="col-xxl-4 col-xl-12">

              <div class="card info-card customers-card">

                <div class="filter">
                  <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                  <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                    <li class="dropdown-header text-start">
                      <h6>Filter</h6>
                    </li>

                    <li><a class="dropdown-item" href="#">Today</a></li>
                    <li><a class="dropdown-item" href="#">This Month</a></li>
                    <li><a class="dropdown-item" href="#">This Year</a></li>
                  </ul>
                </div>

                <div class="card-body">
                  <h5 class="card-title">Customers <span>| This Year</span></h5>

                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-people"></i>
                    </div>
                    <div class="ps-3">
                      <h6>1244</h6>
                      <span class="text-danger small pt-1 fw-bold">12%</span> <span class="text-muted small pt-2 ps-1">decrease</span>

                    </div>
                  </div>

                </div>
              </div>

            </div><!-- End Customers Card -->

            <!-- Reports -->
            <div class="col-12">
              <div class="card">

                <div class="filter">
                  <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                  <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                    <li class="dropdown-header text-start">
                      <h6>Filter</h6>
                    </li>

                    <li><a class="dropdown-item" onclick="weeklyReport()">Today</a></li>
                    <li><a class="dropdown-item" onclick="monthlyReport()">This Month</a></li>
                    <li><a class="dropdown-item" onclick="yearlyReport()">This Year</a></li>
                  </ul>
                </div>

                <div class="card-body">
                  <h5 class="card-title">Reports <span>/Today</span></h5>

                  <!-- Line Chart -->
                  <canvas id="line-chart">

                  </canvas>

                  
                  <!-- End Line Chart -->

                </div>

              </div>
            </div><!-- End Reports -->

            <!-- Recent Sales -->
            

            <!-- Top Selling -->
            <div class="col-12">
              <div class="card top-selling overflow-auto">

                
                  

                <div class="card-body pb-0">
                  <h4 class="card-title">Top Selling</h4>

                  <table class="table table-borderless">
                    <thead>
                      <tr>
                        <th scope="col">Preview</th>
                        <th scope="col">Product</th>
                        <th scope="col">Price</th>
                        <th scope="col">Sold</th>
                        <th scope="col">Revenue</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each TopSellingProducts}}
                      <tr>
                        <th scope="row"><a href="#"><img src="/product-images/{{this._id.prodDetails._id}}.jpg" alt=""></a></th>
                        <td><a href="#" class="text-primary fw-bold">{{this._id.prodDetails.Book}}</a></td>
                        <td><span>Rs: </span>{{this._id.prodDetails.Offerprice}}</td>
                        <td class="fw-bold">{{this.count}}</td>
                        <td><span>Rs: </span>{{topsellingrevenue this._id.prodDetails.Offerprice this.count}}</td>
                      </tr>
                      {{/each}}
                    </tbody>
                  </table>

                </div>

              </div>
            </div><!-- End Top Selling -->

          </div>
        </div><!-- End Left side columns -->

        

      </div>
    </section>

  </main>

  <script>
  var myChart;
  var myChart2;
  var myChart3
  var chart1
  var chart2
  var chart3

 window.onload = () => {
  dailyrevenue()
  todaysSales()
 weeklyReport()
 weeklyReportPayment()
 
};



function weeklyReport(){

                        
 chart1 = true;

  const data = {
    labels: [
      {{#each dailysales}}'{{_id}}',{{/each}}
      
    ],
    datasets: [{
      label: 'Daily Sales',
      data: [
        {{#each dailysales}}'{{dailySales}}',{{/each}}
        ],
      backgroundColor: [
        'rgb(103 119 239)',
        'rgb(102 187 106)',
        'rgb(54, 162, 235)',
        'rgb(255, 99, 132)'
      ]
    }]
  };

  const config = {
    type: 'line',
    data: data,
    options: {
      aspectRatio:3,
      responsive:true
    }
  };
  if(chart2){
    myChart2.destroy()
  }
  if(chart3){
    myChart3.destroy()
  }
 
myChart = new Chart(document.getElementById('line-chart'), config)
                                     
} 



