<body class="">
<div class="container">
    <div class="table-responsive continer-fluid">
        <div class="table-wrapper">
            <div class="table-title" style="background-color: rgb(148, 148, 148);">
                <div class="row">
                    <div class="col-sm-12 text-center" >
                        <h2 style="color: white;">Order <b>Details</b></h2>
                    </div>
                    
                </div>
            </div>
            
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>img</th>
                        <th>Item</th>						
                        <th>Qty</th>						
                        <th>Amount</th>
                        <th>Shipping-Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                  {{#each oneOrderDetails}}
                    <tr>
                       <td style="width: 100px;">
                        	<img
                            src="/productImages/{{this.orderedProducts.img.[0]}}"
                            style="width: 200px;height: 100px;"
                            class="img-fluid m-2"
                            alt="Phone"
                            />
                    	   </td>
                        <td>
							      <p class="fs-3">{{this.orderedProducts.Book}}</p>
						      </td>
                        <td>
							      <p class="fs-3">{{this.product.products.quantity}}</p>
						      </td>
                      
                      	<td>
							      <p class="fs-3">Rs.{{this.orderedProducts.Offerprice}}</p>
						      </td>
                       
                        <td>
							{{#if (isInitiated this.product.products.shipping)}}
                           		<span class="status text-primary">&bull;</span ><span class="fs-3" id="{{this.product.products.item}}">{{this.product.products.shipping}}</span>
						   	{{else}}
						   		{{#if (isReturnApproved this.product.products.shipping)}}
						   			<span class="status text-warning">&bull;</span ><span class="fs-3" id="{{this.product.products.item}}">{{this.product.products.shipping}}</span>
						   		{{else}}
									{{#if (deliveryOver this.product.products.shipping)}}
							 			<span class="status text-success">&bull;</span ><span class="fs-3" id="{{this.product.products.item}}">{{this.product.products.shipping}}</span>
							 		{{else}}
							  			<span class="status text-danger">&bull;</span ><span class="fs-3" id="{{this.product.products.item}}">{{this.product.products.shipping}}</span>
							 		{{/if}}
						   		{{/if}}
						   	{{/if}} 
                        </td>
                         
                        <td>
                           {{#if (deliveryOver this.product.products.shipping)}}
                              <a onclick="location.href='/returnOrder?prodId={{this.product.products.item}}&orderId={{this._id}}'" class="btn btn-danger" >Return item</a>
                           {{else}}
                              {{#if (isCancelled this.product.products.shipping)}}
                              {{else}}
                                 <button style="height:4em ; width: auto; background-color: rgb(207, 16, 16); color: white;font-size: 12px;" class="btn btn-primary" onclick="cancelOrder('{{this.product.products.item}}','{{this._id}}','{{this.product.products.quantity}}','{{this.orderedProducts.Offerprice}}','{{../user._id}}')">Cancel Order</button>
                              {{/if}}
                           {{/if}} 
                        </td>
                     </tr>
                 {{/each}}
                 
                </tbody>
                
            </table>
             <div class="d-flex justify-content-between">
               {{#if ot}}
               <p class="text-muted mb-0 p-3"  ><span class="fw-bold">Invoice Date : </span>{{ot}}</p>
               {{/if}}
               
            </div>
            <div class="d-flex justify-content-between">
               {{#if billingAddress}}
               <p class="text-muted mb-0 p-3"><span class="fw-bold">Address :</span>
                     <span><br>
                        {{billingAddress.firstName}} {{billingAddress.lastName}}, &nbsp;
                        {{billingAddress.housenumberorstreetname}} <br>
                        {{billingAddress.townorcity}},
                        {{billingAddress.stateorcounty}} <br>
                        Pin:{{billingAddress.postcode}} 
                     </span>
                     
               </p> 
               {{/if}}
               
            </div>

         </div>
         <div
            class="card-footer border-0 px-4 py-3 d-flex justify-content-center justify-content-md-end"
            style="background-color: rgb(121, 115, 115); border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;"
         >
            <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0"><span class="mr-3">Total paid:</span>
               {{#if gt}}
               <span class=" mb-0 ms-2 fs-1">â‚¹</span><span class="fs-1 fw-bold"> {{gt}}</span></h5>
               {{/if}}
         </div>

      </div>
   </div>        
</div>     
</body>
</html>
</main>

<script>

   function updatestatus(orderId,prodId){
      
      let status = document.getElementById(prodId).value
      console.log(prodId)
      console.log(orderId)
      console.log(status)

      $.ajax({
         url:'/admin/updateOrderStatus',
         type:'post',
         data:{
            orderId:orderId,
            prodId:prodId,
            status:status
         },
         success:(response)=>{
           
               location.href = '/admin/order-details'
            
         },
			error:(response)=>{
				location.href = '/error'
			}
      })
      
   }


   
</script>