

<body>
   {{#if data}}
   
   <div class="container">
        <div class="d-flex row">
            <div class=" col-12 col-md-3 mb-3">
                <img src="/images/download.jpeg" alt="">
            </div>
            <div class="col-12 col-md-6">
                
                <table>
                    <tr class="">
                        <th class="fs-1">
                            Product
                        </th>
                        <td class="ps-5 fs-3 ">
                            {{data.prodInfo.Book}}
                        </td>
                    </tr>
                    <tr>
                        <th class="fs-1 ">
                            Price
                        </th>
                        <td class="ps-5 fs-3">
                            {{data.prodInfo.Offerprice}}
                        </td>
                    </tr>
                    <tr>
                        <th class="fs-1">
                            Date of Order
                        </th>
                        <td class="ps-5 fs-3">
                            {{data.timeoforder}}
                        </td>
                    </tr>
                    <tr>
                        <th class="fs-1 ">
                            Quantity
                        </th>
                        <td class="ps-5 fs-3">
                            {{data.product.products.quantity}}
                        </td>
                    </tr>
                    <tr>
                        <th class="fs-1">
                            Total Amount
                        </th>
                        <td id="totalAmt" class="ps-5 fs-3">

                        </td>
                    </tr>
                    
                </table>
            </div>
        </div>
        <div class="row p-5">
            <form action="" method="" class="row" id="orderReturnForm">
                <input type="text" hidden value="{{user._id}}" name="userId" id="">
                <input type="text" hidden value="{{prodId}}" name="prodId">
                <input type="text" hidden value="{{orderId}}" name="orderId">
                <input type="text" hidden value="Return-Requested" name="returnStatus">
                <textarea class="form-control" name="reason" id="" cols="30" rows="5">Reason for returning the product..</textarea>
                <div class="text-center">
                <button class="btn btn-success w-auto" type="submit" name="" id="">Confirm</button>
                </div>
            </form>
        </div>
   </div>
   <script>
    var totalAmt = parseInt({{data.product.products.quantity}})*parseInt({{data.prodInfo.Price}})
    console.log(totalAmt)
    document.getElementById('totalAmt').innerHTML = totalAmt
   </script>
   
    {{/if}}

<script>
        $('#orderReturnForm').submit((e)=>{
            e.preventDefault()
            $.ajax({
                url:'/returnOrder',
                type:'post',
                data:$('#orderReturnForm').serialize(),
                success:(response)=>{
                   window.location.href = '/orders'
                },
			error:(response)=>{
				location.href = '/error'
			}
            })
        })
    </script>
    






